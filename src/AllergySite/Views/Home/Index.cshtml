@{
    ViewData["Title"] = "Home Page";
}

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
        @*<li data-target="#myCarousel" data-slide-to="3"></li>*@
    </ol>
    <div class="carousel-inner" role="listbox">
        @*------Home screen-----*@
        <div class="item active">
            <img src="~/images/dandelions.jpg" alt="Allergy" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <h1>Allergy Partners</h1>
                <p>
                    Allergy Partners has bee providing top quality care for Allergy relief many years.
                </p>    
                <a class="btn btn-default" style="background-color: blue; margin-bottom: 100px; color:white;" href="~/Home/AppointmentForm">
                        Make an Appointment
                </a>
            </div>
        </div>
        @*--------Services-----*@
        <div class="item">
            <img src="~/images/Allergy.jpg" alt="Services" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <h1>Need Relief?</h1>
                <p>
                    Do you need relief from your allergy symptoms? Let us help. We specialize in treating a variety of conditions.
                </p>
                <a class="btn btn-default" style="background-color: blue; margin-bottom: 100px; color:white;" href="~/Home/Services">
                        Learn More
                </a>                
            </div>
        </div>
        @*----Locations-----*@
        <div class="item">
            <img src="~/images/Clinic.jpg" alt="Locations" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <h1>Locations</h1>
                <p>
                    Our practice has multiple offices all around Houston. Find an office near you.
                </p>
                <a class="btn btn-default" style="background-color: blue; margin-bottom: 100px; color:white;" href="~/Home/Offices">
                        Locations
                </a>                
            </div>
        </div>
        @*-----Pollen Map-----*@
